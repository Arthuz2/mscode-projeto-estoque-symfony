{% extends 'pagesApp.html.twig' %}
{% block addStylesheet %}
    <link rel="stylesheet" href="{{ asset('styles/novaVenda.css') }}">
{% endblock %}
{% block content %}

	<div class="container py-5">
		<div class="mb-4 d-flex flex-row justify-content-between align-items-center">
			<h1>Categorias</h1>
			<div>
				<a href="/categorias/cadastrar" class="btn btn-danger"><i class="bi bi-plus"></i>Nova categoria</a>
			</div>
		</div>

		<div class="w-90 mt-2">
			{% include "mensagens.html.twig" %}
			<section class="tabela2">
				<div class="table-responsive">
					<table class="table-striped">
						<thead class="tabela-topo">
							<tr>
								<th scope="col">Id</th>
								<th scope="col">Nome</th>
								<th scope="col-1">Actions</th>
							</tr>
						</thead>
						<tbody id="tabela">
							{% for categoria in categorias %}
								<tr>
									<th scope="row">{{ categoria.id }}</th>
									<td>{{ categoria.nome }}</td>
									<td class="col-1 container text-nowrap">
										<a href="categoria/editar/{{ categoria.id }}" class="btn btn-secondary btn-sm">
											<i class="bi bi-pencil"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</section>
		</div>
	</div>
{% endblock %}
