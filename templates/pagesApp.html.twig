{% extends "base.html.twig" %}

{% block title %}MS Code - Projeto 2024 {% endblock %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('styles/header.css') }}">
{% block addStylesheet %}{% endblock %}
{% endblock %}
{% block body %}
	<main>
		<div class="mb-2">
			<div class="container">
				<header class="d-flex flex-wrap justify-content-center align-items-center py-3 top-fixed">
					<a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
						<img class="me-2" src="{{ asset('images/logo-light-mscode.png') }}" width="103">
						<span class="fs-4">pdv</span>
					</a>
					<ul class="nav nav-pills d-flex align-items-center">
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Vendas
							</a>
							<ul class="dropdown-menu">
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('nova_venda') }}" onclick="reloadPageNovaVenda()">Nova venda</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('listar_vendas') }}" onclick="reloadPageListaVendas()">Todas as vendas</a>
							</ul>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Produtos
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="/produtos">Estoque</a>
								</li>
								<li>
									<a class="dropdown-item" href="/categorias">Categorias</a>
								</li>
							</ul>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Cadastrar
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{ path('cadastrar_usuario_show') }}">Usuário</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('cadastrar_cliente_show') }}">Cliente</a>
								</li>
							</ul>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Listar
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{ path('listar_usuarios') }}">Usuários</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('listar_clientes') }}">Clientes</a>
								</li>
							</ul>
						</li>
						<li class="nav-item">
							<a href="{{ path('app_logout') }}" class="btn btn-outline-danger m-0 ms-4 exit-button" aria-current="page">Sair</a>
						</li>
					</ul>
				</header>
			</div>
		</div>
	</main>
	{% block content %}{% endblock %}
	
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		function redirect(path) {
      window.location.href = path;
    }
		function reloadPageNovaVenda() {
			redirect("/");
		}
		function reloadPageListaVendas() {
			redirect("/vendas");
		}
	</script>
	
{% endblock %}
