{% extends 'base.html.twig' %}

{% block title %}Registrar{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
<main class="d-flex align-items-center py-4 bg-body-tertiary">
    <div class="form-signin w-100 m-auto">
        <form method="POST">
            <div class="d-flex align-items-center mb-4">
                <img class="p-0" src="{{ asset('images/logotipo.svg') }}" width="72" height="57">

                <h1 class="h3 fw-normal my-0 ms-2">MS Code - Cadastro</h1>
            </div>

            <div class="form-floating">
                <input type="text" name="name" id="name" class="form-control" autocomplete="name" required autofocus placeholder="Nome">
                <label for="name">Nome</label>
            </div>

            <div class="form-floating">
                <input type="email" name="email" id="email" class="form-control" autocomplete="email" required placeholder="Email">
                <label for="email">Email</label>
            </div>

            <div class="form-floating">
                <input type="password" name="password" id="password" class="form-control" autocomplete="new-password" required placeholder="Senha">
                <label for="password">Senha</label>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-primary w-100 py-2" type="submit">Registrar</button>
            <p class="mt-5 mb-3 text-body-secondary">&copy; 2017â€“2024</p>
        </form>
    </div>
</main>
{% endblock %}
